
<div class="eventHead">
        <% if @current_user.nil? %>
        <%= render 'layouts/header2' %>
        
        <% else %>
        <%= render 'layouts/headings' %>
        <% end %>
</div>

<div class="index">

<div class="upcoming">
        <% if !@past.empty? %>
        <h2>These are the past events</h2>
        <ul>
    
            <% @past.each do |event| %>
        
            <li><%= link_to event.title , event %></li>
        
            <% end %>
    
        </ul>
    <% end %>
</div>
       

 
<div>
        <% if !@upcoming.empty? %>
        <h2 >These are the upcoming events</h2>
        <ul>
    
            <% @upcoming.each do |event| %>
        
            <li><%= link_to event.title , event %></li>
        
            <% end %>
        </ul>
        <% end %>
        
</div>


<% if @past.empty? && @upcoming.empty? %>
<h3> There are no created events,be the first to create events</h3> 
<% end %>

</div>