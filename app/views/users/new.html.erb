<div class="signup">
  <div class='nav'> 
    <div class='logo'>  <a class='li'> EventRiteApp </a></div>
    <%= link_to 'Home', root_path, class: 'li check' %>
    <%= link_to 'Sign In', signin_path, class: 'li check' %>
    <%= link_to 'Events', events_path, class: 'li check' %>
   
     </div>
    <%= render 'layouts/error_messages' %>
    <div class="form-group" >
      <%= form_for @user do |f| %>
      
        <%= f.label :name, 'Enter your name' %>
        <%= f.text_field :name , class: 'form-control'%>  
      <br><br>
        <%= f.label :email, 'Enter your email'  %>
        <%= f.email_field :email, class: 'form-control' %>  
        <br><br>
        <%= f.label :password_digest, 'Enter your password'  %>
        <%= f.password_field :password_digest, class: 'form-control' %>
        <br><br>
       
        <%= f.submit  'Create your account' , class: 'btn btn-primary'  %>
      
      <% end %>
    </div>
    
</div>
 
